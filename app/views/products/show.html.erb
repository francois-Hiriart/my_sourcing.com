<div class="container p-3">
  <div class="row justify-content-center">
    <div class="col-5 card border" >
      <% if @product.picture.attached? %>
        <%= cl_image_tag @product.picture.key, alt: "alttext", class: "round img-fluid" %>
      <% end %>
    </div>

    <div class="col-4 p-3 card border justify-content-center" >
        <div class="card-body">
          <h6 class="text-primary font-weight-bold">Déscription du Produit</h6>
          <h6 class="text-primary font-weight-bold"><%= @product.name%></h4>
          <p class="card-text"><%= @product.description %></p>
        </div>
    </div>

    <div class="col-3 card border justify-content-center" >
      <div class="card-body">
        <div class="row">
          <div class="card-body">
            <p class=""><i class="fa fa-medkit"></i><small class="text-muted"> Catégorie: <%= @product.category %></small></p>
            <p class="card-text"><i class="fas fa-star"></i><small class="text-muted"> Marque: <%= @product.brand %></small></p>
            <p class="card-text"><i class="fas fa-book-open"></i> <small class="text-muted"> Modèle: <%= @product.model %></small></p>
            <p class="card-text"><i class="fas fa-thumbs-up"></i><small class="text-muted"> Classement: <%= @product.average_rating %></small></p>
            <p class="card-text"><i class="fa fa-cubes "></i><small class="text-muted"> Stock disponible: <%= @product.available_quantity %></small></p>
          </div>
        </div>
        <div class="row">
          <div class="card-body justify-content-center">
            <p class="card-text text-primary font-weight-bold"><i class="fas fa-euro-sign"></i> <%= @product.unit_price_cents%>/unité</p>
            <p class="card-text text-primary font-weight-bold">Référence du vendeur: <%= @product.user_id%></p>
            <%= link_to "Avoir un Devis", new_product_order_path(@product), class: "btn btn-primary" %>
          </div>
        </div>
      </div>
    </div>
  </div>


  <div class="row p-3">
    <h4 class="text-primary font-weight-bold">Recommendations</h4>
  </div>

  <div class="row justify-content-center">
    <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
      <ol class="carousel-indicators">
        <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
      </ol>
      <div class="carousel-inner ">
        <% @recommanded_products.each_with_index do |recommanded_product, index| %>
          <% active = index == 0 ? "active" : "" %>
          <div class="carousel-item <%= active %>">
            <% if recommanded_product.picture.attached? %>
              <%= cl_image_tag recommanded_product.picture.key, height: 300, width: 400, crop: :fill, class: "round img-fluid" %>
            <% end %>
          </div>
        <% end %>
      </div>
      <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
      </a>
      <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
      </a>
    </div>
  </div>
</div>
