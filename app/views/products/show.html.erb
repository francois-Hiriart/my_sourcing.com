<div class="container">

  <div class="row justify-content-center">

  <div class="col-6 card border border-primary shadow-sm" id="cardi">
    <img class="card-img" src="https://www.purepara.com/19563-large_default/baccide-masque-virucide-anti-viral-actif-longue-duree-bleu.jpg" alt="Card image cap">
  </div>

  <div class="col-3 card border border-primary shadow-sm" id="cardi" >

    <div class="=row justify-content-center">
      <div class="card">
        <div class="card-body">
        <p class="card-text text-primary font-weight-bold">Catégorie: <%= @product.category %></p>
        </div>
      </div>

      <div class="card">
        <div class="card-body">
        <p class="card-text text-primary font-weight-bold">Marque: <%= @product.brand %></p>
        </div>
      </div>

      <div class="card ">
        <div class="card-body">
          <p class="card-text text-primary font-weight-bold">Modèl: <%= @product.model %></p>
        </div>
      </div>
    </div>

    <div class="=row justify-content-center">
    <div class="card">
      <div class="card-body">
        <p class="card-text text-primary font-weight-bold">Stock: <%= @product.available_quantity %></p>
        <p class="card-text"><small class="text-muted">Last updated 3 mins ago</small></p>
      </div>
    </div>

    <div class="card">
      <div class="card-body">
        <p class="card-text text-primary font-weight-bold">Classement: <%= @product.average_rating%></p>
        <p class="card-text"><small class="text-muted">Last updated 3 mins ago</small></p>
      </div>
    </div>
  </div>
</div>

  <div class="col-3 card border border-primary shadow-sm" id="cardi">
    <div class="card-body justify-content-center">
      <p classe="text-primary font-weight-bold"><i class="fas fa-euro-sign text-primary font-weight-bold"></i><span class="text-primary font-weight-bold" id="product-price"> <%= @product.unit_price_cents %></span> / entité</p>
      <p class="card-text text-primary font-weight-bold">Vendu par (User ID): <%= @product.user_id%></p>
      <p class="btn btn-outline-primary"><b><%= @product.unit_price_cents %> €</b></p>
      <%= link_to "Avoir un Devis", new_product_order_path(@product), class: "btn btn-primary" %>

      <p class="text btn btn-outline-primary">Contacter Fourniseur</p>

    </div>
  </div>
</div>

<h3 class=" text-primary font-weight-bold"><%= @product.name%></h3>

<div class="row">
  <div class="card border border-primary shadow-sm" id="cardi">
    <div class="card-body">
      <h4 class="text-primary font-weight-bold">Déscription</h4>
      <p class="card-text"><%= @product.description %></p>
    </div>
  </div>

  </div>

  <h3 class="text-primary font-weight-bold">Recommendations</h3>

  <div class="row">
    <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
  <ol class="carousel-indicators">
    <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
    <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
    <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
    <li data-target="#carouselExampleIndicators" data-slide-to="3"></li>
  </ol>

  <div class="carousel-inner">
    <% @recommanded_products.each do |recommanded_product| %>
    <div class="carousel-item active">
      <img class="d-block w-100" src="https://www.sissel.fr/27324-large_default/masque-chirurgical-3-plis-type-iir-boite-de-50.jpg" alt="First slide">
      <p><%= recommanded_product.name%></p>
    </div>
    <% end %>
  </div>

  <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
</div>
  </div>
</div>
