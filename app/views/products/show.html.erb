<div class="container">
  <div class="row">
  <div class="col-6 card">
    <img class="card-img" src="https://www.purepara.com/19563-large_default/baccide-masque-virucide-anti-viral-actif-longue-duree-bleu.jpg" alt="Card image cap">
    <div class="card-body">
      <h5 class="card-title">Card title</h5>
      <p class="card-text"><%= @product.name %></p>
      <p class="card-text"><small class="text-muted">Last updated 3 mins ago</small></p>
    </div>
  </div>

  <div class="col-3 card">

    <div class="=row">
      <div class="card">
             <p><i class="fas fa-ruler-combined"></i>Brand <%= @product.brand %></p>

      </div>

      <div class="card ">
        <div class="card-body">
          <p class="card-text">Model<%= @product.model %></p>
        </div>
      </div>
    </div>

    <div class="=row">
    <div class="card">
      <div class="card-body">
        <p class="card-text">Stock<%= @product.available_quantity %></p>
        <p class="card-text"><small class="text-muted">Last updated 3 mins ago</small></p>
      </div>
    </div>

    <div class="card">
      <div class="card-body">
        <p class="card-text"><%= @product.average_rating%></p>
        <p class="card-text"><small class="text-muted">Last updated 3 mins ago</small></p>
      </div>
    </div>
  </div>
</div>

  <div class="col-3 card">
    <div class="card-body">
      <p class="card-text"><%= @product.unit_price_cents %></p>
      <p class="card-text"><%= @product.user_id%></p>
    </div>
  </div>
</div>

<h3><%= @product.name%></h3>

<div class="row">
  <div class="col-10 card">
    <div class="card-body">
      <h3><%= @product.description%></h3>
      <p class="card-text"><%= @product.description %></p>
    </div>
  </div>

  </div>

