
<div class="main-container">

  <div class="cards" id="custom-cards">
     <% if @products.present? %>
       <% @products.each do |product| %>
          <div class="card" style="width: 18rem;" id="cardgrid">
            <div class="card-body">
              <h4 class="card-title" style="color: #FF6713"><%= product.name %></h4>
              <h2 class="card-title" style="color: #FF6713"><%= product.brand %></h2>
              <div class="row">
                <div class="col-md-6">
                  <%= link_to "Voir plus", product_path(product), class: "btn btn-primary" %>
                </div>
                <div class="col-md-6">
                  <%= link_to "commander ce produit", new_order_path, class: "btn btn-primary" %>
                </div>
                <div class="col-md-6">
                  <h2 class="card-text btn btn-outline-primary"><b><%= product.unit_price_cents %> â‚¬</b></h2>
                </div>
              </div>
            </div>
          </div>
        <% end %>
      <% end %>
  </div>
