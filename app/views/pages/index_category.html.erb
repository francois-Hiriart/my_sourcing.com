
<div class="main-container">
  <%# <div class="container pt-3">
    <h2 style="color: #FF6713">Toutes les cuisines</h2>
  </div> %>

  <div class="cards" id="custom-cards">
     <% if @masques.present? %>
       <% @masques.each do |masque| %>
          <div class="card" style="width: 18rem;" id="cardgrid">
            <div class="card-body">
              <h4 class="card-title" style="color: #FF6713"><%= masque.name %></h4>
              <h2 class="card-title" style="color: #FF6713"><%= masque.brand %></h2>
              <div class="row">
                <div class="col-md-6">
                  <a href="<%= masque_path(masque) %>" class="btn btn-primary">voir plus</a>
                </div>
                <div class="col-md-6">
                  <h2 class="card-text btn btn-outline-primary"><b><%= masque.unit_price_cents %> €</b></h2>
                </div>
              </div>
            </div>
          </div>
        <% end %>
    <% elsif @catheters.present? %>
       <% @catheters.each do |catheter| %>
        <div class="card" style="width: 18rem;" id="cardgrid">
            <div class="card-body">
              <h4 class="card-title" style="color: #FF6713"><%= catheter.name %></h4>
              <h2 class="card-title" style="color: #FF6713"><%= catheter.brand %></h2>
              <div class="row">
                <div class="col-md-6">
                  <a href="<%= masque_path(masque) %>" class="btn btn-primary">voir plus</a>
                </div>
                <div class="col-md-6">
                  <h2 class="card-text btn btn-outline-primary"><b><%= catheter.unit_price_cents %> €</b></h2>
                </div>
              </div>
            </div>
          </div>
        <% end %>
      <% end %>
</div>



