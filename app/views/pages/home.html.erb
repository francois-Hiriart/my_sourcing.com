<h1>Pages#home</h1>
<p>Find me in app/views/pages/home.html.erb</p>


<%= simple_form_for :product, url: products_path, method: "GET" do |f| %>
            <div class="row">
              <div class="col-md-3">
                <%= f.input :query, label: false,
                                        input_html: { placeholder: "que recherchez-vous ?" } %>
              </div>
               <div class="col-md-3">
                <%= f.input :query_category, label: false, as: :check_boxes, collection: Order::CATEGORIES %>
              </div>
               <div class="col-md-3">
                <%= f.submit "recherche" %>
              </div>
            </div>
            <% end %>
