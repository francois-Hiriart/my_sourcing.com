<div class="container pt-4 col d-flex justify-content-center">
  <div class="card p-3 justify-content-center" style="width: 25rem;">
    <div class="card-body">
      <h2 class="text-primary font-weight-bold p-2"><center>Connexion</center></h2>

      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-inputs">
          <%= f.input :email,
                      required: false,
                      autofocus: true,
                      input_html: { autocomplete: "email" } %>
          <%= f.input :password,
                      required: false,
                      input_html: { autocomplete: "current-password" } %>
          <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
        </div>

          <%= f.button :submit, "Connexion", class:"w-100 mb-2 btn btn-primary" %>
      <% end %>
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
