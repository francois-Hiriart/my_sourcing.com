<div class="container">
  <div class="card mb-3" style="width: 1100px;">
    <div class="row no-gutters">
      <div class="col-md-4">
        <img src="francois.jpg" alt="...">
      </div>
      <div class="col-md-8">
        <div class="card-body">
          <h5>Commande n° <span class="text-primary font-weight-bold">#<%= request.id %></span></h5>
          <% if request.product.picture.attached? %>
              <%= cl_image_tag request.product&.picture.key, alt: "alttext", class: "card-img-top img-fluid" %>
            <% end %>
          <p class="card-text"><%= request.product.name%></p>
          <p class="card-text">Quantité : <%= request.product_quantity%> unités</p>
          <p class="card-text">Prix : <%= request.price_cents%> €</p>
          <%= link_to 'Détails du produit', product_path(request.product), class:"btn btn-outline-primary"%>
          <%= link_to 'Valider', edit_order_path(request), class: "btn btn-primary" %>
        </div>
      </div>
    </div>
  </div>
</div>
