<div class="container pt-4 d-flex justify-content-center">
  <div class="card p-3 justify-content-center" style="width: 50rem;">
    <div class="card-body">
      <h2 style="color: #FF6713"><center>Quotes Request</center></h2>
      <%= simple_form_for @order do |f| %>

      <div class="row">
        <div class="col-6">
          <%= f.input :user_id, label:'User ID' %>
        </div>
        <div class="col-6">
          <%= f.input :product_id, label:'Product ID' %>
        </div>
      </div>

      <div class="row">
        <div class="col-6">
          <%= f.input :product_quantity, label:'Quantity' %>
        </div>
        <div class="col-6">
          <%= f.input :price_cents, label:'Price' %>
        </div>
      </div>

       <div class="row">
        <div class="col-6">
          <%= f.input :created_at, label:'Created at' %>
        </div>
        <div class="col-6">
          <%= f.input :updated_at, label:'Updated at' %>
        </div>
      </div>

       <div class="row">
        <div class="col-6">
          <%= f.input :shipping_date, label:'Shipping Date' %>
        </div>
        <div class="col-6">
          <%= f.input :delivery_date, label:'Delivery Date'%>
        </div>
      </div>
      <%= f.button :submit, "Request Quotes", class: 'btn btn-primary' %>
      <% end %>
    </div>
  </div>
</div>
