<div class="container pt-4 d-flex justify-content-center">
  <div class="card p-3 justify-content-center" style="width: 50rem;">
    <div class="card-body">
      <h2 style="color: #FF6713"><center>Quotes Request</center></h2>
      <% if current_user.role = "buyer" %>
      <%= simple_form_for [@product, @order], url: product_orders_path, method: :post do |f| %>
      <div class="row">
      <div class="row">
        <div class="col-6">
      <%= f.input :product_quantity, label:'Quantity' %>
         </div>
      <%= f.button :submit, "Request Quotes", class: 'btn btn-primary' %>
       <% end %>
       <% end %>
    </div>
  </div>
</div>
